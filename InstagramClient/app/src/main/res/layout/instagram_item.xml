<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:minHeight="50dp" />
    <ImageView
        android:id="@+id/insta_heart_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/iv_photo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/insta_heart_icon" />
    <TextView
        android:id="@+id/tv_num_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_photo"
        android:text="likes"
        android:textSize="15sp"
        android:layout_toRightOf="@id/insta_heart_icon"
        android:layout_alignTop="@+id/insta_heart_icon"
        android:layout_alignBottom="@id/insta_heart_icon"
        android:gravity="center"
        android:paddingLeft="20px"
        android:textColor="@color/insta_heart_blue" />
    <TextView
        android:id="@+id/tv_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/insta_heart_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="New Test Text"
        android:textSize="15sp"
        android:maxLines="3"
        android:layout_marginLeft="10dp"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/tv_view_all_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="13sp"
        android:maxLines="3"
        android:layout_marginLeft="10dp"
        android:text="view all comments"
        android:ellipsize="end"
        android:layout_below="@+id/tv_caption"
        android:textColor="@android:color/tertiary_text_dark"
        />
    <TextView
        android:id="@+id/tv_comment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="13sp"
        android:maxLines="3"
        android:layout_marginLeft="10dp"
        android:text="comment1"
        android:ellipsize="end"
        android:layout_below="@+id/tv_view_all_comments"
        />
    <TextView
        android:id="@+id/tv_comment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="13sp"
        android:maxLines="3"
        android:layout_marginLeft="10dp"
        android:text="comment2"
        android:ellipsize="end"
        android:layout_below="@+id/tv_comment1"
        />


</RelativeLayout>